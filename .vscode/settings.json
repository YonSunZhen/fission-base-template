{
  "json.schemas": [
    {
      "fileMatch": [
        "devminus.json"
      ],
      "schema": {
        "type": "object",
        "required": ["module", "functions"],
        "properties": {
          "module": {
            "type": "string",
            "description": "pkg name"
          },
          "functions": {
            "type": "array",
            "description": "fn list",
            "items": {
              "type": "object",
              "required": ["name", "entry"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "fn name"
                },
                "method": {
                  "type": "string",
                  "description": "http method",
                  "enum": ["GET", "POST", "PUT", "DELETE"]
                },
                "entry": {
                  "type": "string",
                  "description": "fn entry"
                },
                "keepalive": {
                  "type": "boolean",
                  "description": "keepalive",
                  "default": true
                },
                "url": {
                  "type": "string",
                  "description": "http path"
                },
                "configmap": {
                  "type": "string",
                  "description": "configmap",
                  "default": "devminus-shared-mariadb"
                },
                "cron": {
                  "type": "string",
                  "description": "cron rule",
                  "default": "* * * * * *"
                }
              }
            }
          }
        }
      }
    }
  ]
}